<Window x:Class="HelloWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="đây là màn hình đăng nhập&#xD;&#xA;" HorizontalAlignment="Left" Margin="188,131,0,0" VerticalAlignment="Top" Width="376" FontSize="24" FontFamily="Arial Black" Background="#FF3BE3DD" Foreground="#FF3B32F4"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="188,343,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="18"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="515,343,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="4.215,0.576" Height="30" Click="btnThoat_Click"/>
        <Label Content="User Name" HorizontalAlignment="Left" Margin="188,233,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="314,294,0,0" VerticalAlignment="Top" Width="250" FontSize="20"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="314,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="20"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="188,294,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
